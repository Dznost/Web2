<!-- views/librarian/payment.ejs -->
<%- include('../layouts/main') %>

<main class="container py-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h5 class="mb-0"><i class="fas fa-money-check-alt me-2"></i>Thanh toán trễ hạn</h5>
        </div>
        <div class="card-body">
          <form action="/librarian/payment" method="POST">
            <div class="mb-3">
              <label for="confirmationCode" class="form-label">Nhập mã xác nhận</label>
              <input type="text" class="form-control" id="confirmationCode" name="confirmationCode" placeholder="Nhập mã xác nhận..." required>
            </div>
            <div class="d-grid">
              <button type="submit" class="btn btn-success">
                <i class="fas fa-calculator me-1"></i>Tính tiền
              </button>
            </div>
          </form>

          <% if (result) { %>
            <hr>
            <h6 class="text-success"><i class="fas fa-receipt me-2"></i>Kết quả thanh toán</h6>
            <ul class="list-group mb-3">
              <li class="list-group-item"><strong>Tên sách:</strong> <%= result.bookTitle %></li>
              <li class="list-group-item"><strong>Người mượn:</strong> <%= result.userName %> (<%= result.userRole %>)</li>
              <li class="list-group-item"><strong>Ngày mượn:</strong> <%= result.borrowDate %></li>
              <li class="list-group-item"><strong>Ngày trả:</strong> <%= result.returnDate %></li>
              <li class="list-group-item"><strong>Phí phải trả:</strong> <%= result.totalFee.toLocaleString() %> VND</li>
            </ul>

            <div class="alert alert-info">
              <strong>Thông tin thanh toán:</strong><br>
              Ngân hàng: Bank<br>
              Số tài khoản: 123456789999<br>
              Tên người nhận: Duong Quoc Bao<br>
            </div>
          <% } else if (error) { %>
            <div class="alert alert-danger mt-3">
              <i class="fas fa-exclamation-circle me-1"></i><%= error %>
            </div>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</main>
