<%- include('../layouts/main') %>

<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-chart-bar me-2"></i>
                        Thống kê sách cần mua
                    </h4>
                </div>
                <div class="card-body">
                    <% if (bookRequests.length === 0) { %>
                        <div class="alert alert-info text-center py-4">
                            <i class="fas fa-info-circle fa-2x mb-2"></i>
                            <p class="mb-0">Chưa có yêu cầu sách mới nào.</p>
                        </div>
                    <% } else { %>
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>Người yêu cầu</th>
                                        <th>Tên sách</th>
                                        <th>Tác giả</th>
                                        <th>Lý do</th>
                                        <th>Ngày yêu cầu</th>
                                        <th>Trạng thái</th>
                                        <th>Thao tác</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% bookRequests.forEach(request => { %>
                                        <tr>
                                            <td><%= request.username %></td>
                                            <td>
                                                <strong><%= request.title %></strong>
                                                <% if (request.year) { %>(<%= request.year %>)<% } %>
                                                <% if (request.genre) { %><br><small class="text-muted"><%= request.genre %></small><% } %>
                                            </td>
                                            <td><%= request.author %></td>
                                            <td><%= request.reason %></td>
                                            <td><%= request.createdAt.toLocaleDateString('vi-VN') %></td>
                                            <td>
                                                <% if (request.status === 'pending') { %>
                                                    <span class="badge bg-warning">Chờ xử lý</span>
                                                <% } else if (request.status === 'approved') { %>
                                                    <span class="badge bg-success">Đã duyệt</span>
                                                <% } else if (request.status === 'rejected') { %>
                                                    <span class="badge bg-danger">Đã từ chối</span>
                                                <% } %>
                                            </td>
                                            <td>
                                                <% if (request.status === 'pending') { %>
                                                    <button class="btn btn-sm btn-success me-1" 
                                                            onclick="updateStatus('<%= request._id %>', 'approved')">
                                                        <i class="fas fa-check"></i> Duyệt
                                                    </button>
                                                    <button class="btn btn-sm btn-danger" 
                                                            onclick="updateStatus('<%= request._id %>', 'rejected')">
                                                        <i class="fas fa-times"></i> Từ chối
                                                    </button>
                                                <% } else { %>
                                                    <button class="btn btn-sm btn-secondary" disabled>Đã xử lý</button>
                                                <% } %>
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
async function updateStatus(requestId, status) {
    const adminNotes = prompt(`Nhập ghi chú cho yêu cầu này (Trạng thái: ${status}):`);
    
    try {
        const response = await fetch(`/admin/book-request/${requestId}`, {
            method: 'PUT',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ status, adminNotes })
        });
        
        const result = await response.json();
        
        if (result.success) {
            alert(result.message);
            location.reload();
        } else {
            alert(result.error || 'Có lỗi xảy ra');
        }
    } catch (error) {
        alert('Có lỗi xảy ra khi cập nhật trạng thái');
    }
}
</script>
