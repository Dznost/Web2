<html lang="vi">
<%- include('../layouts/main') %>

<style>
.borrow-container {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
    padding: 40px 0;
}

.borrow-card {
    border-radius: 20px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    border: none;
    overflow: hidden;
    background: white;
}

.card-header-custom {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    padding: 30px;
    border: none;
}

.card-header-custom h4 {
    font-weight: 600;
    margin: 0;
}

.book-info-section {
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    padding: 30px;
    border-radius: 15px;
    margin-bottom: 30px;
}

.book-image-wrapper {
    position: relative;
    overflow: hidden;
    border-radius: 15px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    transition: transform 0.3s ease;
}

.book-image-wrapper:hover {
    transform: translateY(-5px);
}

.book-image-wrapper img {
    width: 100%;
    height: auto;
    display: block;
}

.book-details h5 {
    color: #2d3748;
    font-weight: 700;
    margin-bottom: 20px;
    font-size: 1.5rem;
}

.book-meta {
    display: flex;
    align-items: center;
    padding: 10px 0;
    color: #4a5568;
    font-size: 0.95rem;
}

.book-meta i {
    width: 25px;
    color: #667eea;
}

.form-label {
    font-weight: 600;
    color: #2d3748;
    margin-bottom: 10px;
    font-size: 0.95rem;
}

.form-control, .form-select {
    border: 2px solid #e2e8f0;
    border-radius: 10px;
    padding: 12px 15px;
    transition: all 0.3s ease;
    font-size: 0.95rem;
}

.form-control:focus, .form-select:focus {
    border-color: #667eea;
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
}

.rules-box {
    background: linear-gradient(135deg, #e0f2fe 0%, #dbeafe 100%);
    border-left: 4px solid #3b82f6;
    padding: 20px;
    border-radius: 10px;
    margin: 25px 0;
}

.rules-box h6 {
    color: #1e40af;
    font-weight: 600;
    margin-bottom: 15px;
}

.rules-box p {
    color: #1e3a8a;
    margin-bottom: 8px;
    padding-left: 10px;
}

.checkbox-wrapper {
    background: #f8fafc;
    padding: 15px;
    border-radius: 10px;
    border: 2px solid #e2e8f0;
}

.form-check-input:checked {
    background-color: #667eea;
    border-color: #667eea;
}

.btn-back {
    background: white;
    color: #667eea;
    border: 2px solid #667eea;
    padding: 12px 30px;
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-back:hover {
    background: #667eea;
    color: white;
    transform: translateY(-2px);
    box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
}

.btn-submit {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    border: none;
    padding: 12px 40px;
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(16, 185, 129, 0.3);
}

.modal-content {
    border-radius: 20px;
    border: none;
    overflow: hidden;
}

.modal-header-success {
    background: linear-gradient(135deg, #10b981 0%, #059669 100%);
    color: white;
    padding: 25px 30px;
    border: none;
}

.modal-body {
    padding: 30px;
}

.confirmation-code {
    background: linear-gradient(135deg, #ddd6fe 0%, #c7d2fe 100%);
    padding: 15px 20px;
    border-radius: 10px;
    font-size: 1.2rem;
    font-weight: 700;
    color: #5b21b6;
    text-align: center;
    margin: 15px 0;
    letter-spacing: 2px;
}

.modal-footer {
    padding: 20px 30px;
    border-top: 2px solid #f1f5f9;
}

.btn-modal-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
    border: none;
    padding: 12px 25px;
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-modal-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 8px 20px rgba(102, 126, 234, 0.3);
}

.btn-modal-secondary {
    background: white;
    color: #64748b;
    border: 2px solid #e2e8f0;
    padding: 12px 25px;
    border-radius: 10px;
    font-weight: 600;
    transition: all 0.3s ease;
}

.btn-modal-secondary:hover {
    background: #f8fafc;
    border-color: #cbd5e1;
}

.form-section {
    padding: 35px;
}

@media (max-width: 768px) {
    .borrow-container {
        padding: 20px 0;
    }
    
    .book-info-section {
        padding: 20px;
    }
    
    .form-section {
        padding: 25px;
    }
}
</style>

<div class="borrow-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-9 col-xl-8">
                <div class="borrow-card">
                    <div class="card-header-custom">
                        <h4>
                            <i class="fas fa-hand-holding me-3"></i>
                            Đăng ký mượn sách
                        </h4>
                    </div>
                    
                    <div class="form-section">
                        <!-- Book Info -->
                        <div class="book-info-section">
                            <div class="row align-items-center">
                                <div class="col-md-4 mb-3 mb-md-0">
                                    <div class="book-image-wrapper">
                                        <img src="<%= book.image %>" alt="<%= book.title %>">
                                    </div>
                                </div>
                                <div class="col-md-8 book-details">
                                    <h5><%= book.title %></h5>
                                    <div class="book-meta">
                                        <i class="fas fa-user"></i>
                                        <span><strong>Tác giả:</strong> <%= book.author %></span>
                                    </div>
                                    <div class="book-meta">
                                        <i class="fas fa-barcode"></i>
                                        <span><strong>Mã sách:</strong> <%= book.bookId %></span>
                                    </div>
                                    <div class="book-meta">
                                        <i class="fas fa-calendar"></i>
                                        <span><strong>Năm xuất bản:</strong> <%= book.year %></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Borrow Form -->
                        <form id="borrowForm">
                            <div class="mb-4">
                                <label for="fullName" class="form-label">
                                    <i class="fas fa-user-circle me-2"></i>Họ và tên <span class="text-danger">*</span>
                                </label>
                                <input type="text" class="form-control" id="fullName" name="fullName" 
                                       value="<%= user.fullName %>" required placeholder="Nhập họ và tên của bạn">
                            </div>
                            
                            <div class="mb-4">
                                <label for="bookCode" class="form-label">
                                    <i class="fas fa-book me-2"></i>Mã sách
                                </label>
                                <input type="text" class="form-control" id="bookCode" 
                                       value="<%= book.bookId %>" readonly>
                            </div>
                            
                            <div class="mb-4">
                                <label for="branch" class="form-label">
                                    <i class="fas fa-map-marker-alt me-2"></i>Chi nhánh nhận sách <span class="text-danger">*</span>
                                </label>
                                <select class="form-select" id="branch" name="branch" required>
                                    <option value="">Chọn chi nhánh nhận sách</option>
                                    <% availableBranches.forEach(branch => { %>
                                        <option value="<%= branch.name %>">
                                            Chi nhánh <%= branch.name %> (Còn <%= branch.quantity %> quyển)
                                        </option>
                                    <% }) %>
                                </select>
                            </div>
                            
                            <div class="mb-4">
                                <label for="expectedReceiveDate" class="form-label">
                                    <i class="fas fa-calendar-check me-2"></i>Ngày dự kiến nhận sách <span class="text-danger">*</span>
                                </label>
                                <input type="date" class="form-control" id="expectedReceiveDate" name="expectedReceiveDate" 
                                       min="<%= new Date().toISOString().split('T')[0] %>" required>
                            </div>
                            
                            <!-- Borrowing Rules -->
                            <div class="rules-box">
                                <h6><i class="fas fa-info-circle me-2"></i>Quy định mượn sách</h6>
                                <% if (user.role === 'student') { %>
                                    <p><i class="fas fa-check-circle me-2" style="color: #10b981;"></i>Sinh viên: Thời gian mượn tối đa 7 ngày</p>
                                <% } else if (user.role === 'teacher') { %>
                                    <p><i class="fas fa-check-circle me-2" style="color: #10b981;"></i>Giảng viên: Không giới hạn thời gian, tối đa 5 quyển/năm</p>
                                <% } else { %>
                                    <p><i class="fas fa-check-circle me-2" style="color: #10b981;"></i>Độc giả: Thời gian mượn tối đa 7 ngày, tối đa 3 quyển</p>
                                <% } %>
                            </div>
                            
                            <div class="checkbox-wrapper mb-4">
                                <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="agreeToRules" name="agreeToRules" required>
                                    <label class="form-check-label" for="agreeToRules">
                                        Tôi đồng ý với <a href="/user/rules" target="_blank" style="color: #667eea; font-weight: 600;">quy định mượn sách</a> <span class="text-danger">*</span>
                                    </label>
                                </div>
                            </div>
                            
                            <div class="d-grid gap-3 d-md-flex justify-content-md-end">
                                <a href="/books/<%= book._id %>" class="btn btn-back">
                                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                                </a>
                                <button type="submit" class="btn btn-submit">
                                    <i class="fas fa-check-circle me-2"></i>Xác nhận đăng ký
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Success Modal -->
<div class="modal fade" id="successModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header-success">
                <h5 class="modal-title">
                    <i class="fas fa-check-circle me-3"></i>
                    Đăng ký thành công!
                </h5>
            </div>
            <div class="modal-body text-center">
                <div style="font-size: 4rem; color: #10b981; margin: 20px 0;">
                    <i class="fas fa-check-circle"></i>
                </div>
                <h5 style="color: #2d3748; margin-bottom: 20px;">Đăng ký mượn sách thành công!</h5>
                <p style="color: #64748b;">Mã xác nhận của bạn:</p>
                <div class="confirmation-code" id="confirmationCode"></div>
                <p style="color: #64748b; margin-top: 15px;">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    Vui lòng lưu lại mã xác nhận để nhận sách tại chi nhánh.
                </p>
            </div>
            <div class="modal-footer">
                <a href="/user/cart" class="btn btn-modal-primary">
                    <i class="fas fa-shopping-cart me-2"></i>Xem giỏ hàng
                </a>
                <a href="/books" class="btn btn-modal-secondary">
                    <i class="fas fa-book me-2"></i>Tiếp tục tìm sách
                </a>
            </div>
        </div>
    </div>
</div>

<script>
document.getElementById('borrowForm').addEventListener('submit', async function(e) {
    e.preventDefault();
    
    const formData = new FormData(this);
    const data = Object.fromEntries(formData);
    
    try {
        const response = await fetch(`/books/<%= book._id %>/borrow`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify(data)
        });
        
        const result = await response.json();
        
        if (result.success) {
            document.getElementById('confirmationCode').textContent = result.confirmationCode;
            new bootstrap.Modal(document.getElementById('successModal')).show();
        } else {
            alert(result.error || 'Có lỗi xảy ra');
        }
    } catch (error) {
        alert('Có lỗi xảy ra khi đăng ký mượn sách');
    }
});

// Set minimum expected receive date to today
document.addEventListener('DOMContentLoaded', function() {
    const today = new Date();
    document.getElementById('expectedReceiveDate').min = today.toISOString().split('T')[0];
});
</script>
</html>